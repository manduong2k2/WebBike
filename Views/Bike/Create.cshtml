        </div>
    </div>

    <div class="form-group">
        Loại xe:
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.LoaiId, new SelectList(ViewBag.Categories, "LoaiId", "tenLoai"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        Hãng:
